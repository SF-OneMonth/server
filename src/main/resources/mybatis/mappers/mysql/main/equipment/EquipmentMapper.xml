<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.hae.server.domain.equipment.mapper.EquipmentMapper">
    
    <select id="findAll" resultType="org.hae.server.domain.equipment.model.Equipment">
        SELECT * FROM equipment
    </select>

    <select id="findById" resultType="org.hae.server.domain.equipment.model.Equipment">
        SELECT * FROM equipment WHERE id = #{id}
    </select>

    <select id="findByCode" resultType="org.hae.server.domain.equipment.model.Equipment">
        SELECT * FROM equipment WHERE equipment_code = #{equipmentCode}
    </select>

    <insert id="insert" parameterType="org.hae.server.domain.equipment.model.Equipment">
        INSERT INTO equipment (
            equipment_code, 
            equipment_name, 
            equipment_type, 
            status, 
            installation_date
        ) VALUES (
            #{equipmentCode}, 
            #{equipmentName}, 
            #{equipmentType}, 
            #{status}, 
            #{installationDate}
        )
    </insert>

    <update id="update" parameterType="org.hae.server.domain.equipment.model.Equipment">
        UPDATE equipment 
        SET 
            equipment_name = #{equipmentName},
            equipment_type = #{equipmentType},
            status = #{status},
            installation_date = #{installationDate}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM equipment WHERE id = #{id}
    </delete>
</mapper> 